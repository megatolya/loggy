h4='{{path}}'
table.table.table-bordered.table-hover.table-striped
    thead
        tr
            td(width='15%')='{{i18n.time}}'
            td(width='15%')='{{i18n.module}}'
            td(width='15%')='{{i18n.level}}'
            td(width='55%')='{{i18n.message}}'
    tbody
        tr
            td
                input(ng-model='grep.date', type='text', class='form-control')
                span.clear-input(ng-show='grep.date.length', ng-click='grep.date=""')='x'
            td
                input(ng-model='grep.module', type='text', class='form-control')
                span.clear-input(ng-show='grep.module.length', ng-click='grep.module=""')='x'
            td
                input(ng-model='grep.level', type='text', class='form-control')
                span.clear-input(ng-show='grep.level.length', ng-click='grep.level=""')='x'
            td
                input.form-control(ng-model='grep.msg', type='text')
                span.clear-input(ng-show='grep.msg.length', ng-click='grep.msg=""')='x'
        tr(ng-repeat='log in logs | filter:grep:strict  ')
            td.date.hover(ng-click='grep.date = log.date')='{{log.date}}'
            td.module.hover(ng-click='grep.module = log.module')='{{log.module}}'
            td.level.hover(ng-click='grep.level = log.level')
                span.label(class='{{log.level | levelClass}}')='{{log.level}}'
            td.msg(inspector, data="{{log.msg}}")
